		        		<div class="dash-image">
		        			<img src="pics/stray1.jpg">
		        		</div>

		        		<div class="dash-info">
		        			<p>Name: </p>
		        			<p>Age: </p>
		        			<p>Color: </p>
		        			<p>Breed: </p>
		        			<p>Status: </p>
		        		</div>

		        		<div class="crud-btns">
		        			<button>Edit</button>
		        			<button>Delete</button>
		        		</div>

		        	</div>

		        </div>

		        <!--strays-submissions-->
		        <div id="content-submissions" class="contentStray">
		        	<div class="dash-container">
		        		<div class="dash-image">
		        			<img src="pics/stray1.jpg">
		        		</div>

		        		<div class="dash-info">
		        			<p>Submitted by: </p>
		        			<p>Name: </p>
		        			<p>Age: </p>
		        			<p>Color: </p>
		        			<p>Breed: </p>
		        			<p>Status: </p>
		        		</div>

		        		<div class="crud-btns">
		        			<button>Approve</button>
		        			<button>Delete</button>
		        		</div>

		        	</div>

					<button class="add-stray" onclick="location.href='/create'">Add a Stray</button>
		        </div>

		        <!--donation-->
		        <div id="content-donations" class="contentStray">
		        	<div class="dash-container">
		            	Content for donations
		        	</div>
		        </div>

		        <!--blogs-->
		        <div id="content-blogs" class="contentStray">
		        	<div class="dash-container">

		            	<div class="dash-image">
		        			<img src="pics/stray1.jpg">
		        		</div>

		        		<div class="dash-info">
		        			<p>Posted by: </p>
		        			<p>Title: </p>
		        			<p>Content: </p>
		        		</div>

		        		<div class="crud-btns">
		        			<button>Approve</button>
		        			<button>Delete</button>
		        		</div>

		        	</div>
		        </div>

		        <!--faqs-->
		        <div id="content-faqs" class="contentStray">
		        	<div class="dash-container">
		            	Content for faqs
		        	</div>
		        </div>

		        <!--messages-->
		        <div id="content-messages" class="contentStray">
		        	<div class="dash-container">
		            	Content for messages
		        	</div>
		        </div>
